<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layoutitem"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="2dp"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/appointment_featured_image"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentLeft="true"
            app:srcCompat="@drawable/bed"
            android:layout_marginRight="8dp" />

        <TextView
            android:id="@+id/bed_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/appointment_featured_image"
            android:maxLength="65"
            android:maxLines="1"
            android:text="New Text"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="16sp"
            tools:text="Cama0905" />

        <TextView
            android:id="@+id/bed_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/bed_code"
            android:layout_toRightOf="@+id/appointment_featured_image"
            android:text="New Text"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            tools:text="Piso 9" />

        <TextView
            android:id="@+id/bed_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/bed_floor"
            android:layout_toRightOf="@+id/appointment_featured_image"
            android:text="New Text"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            tools:text="Sala 5" />

        <TextView
            android:id="@+id/bed_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/bed_room"
            android:layout_toRightOf="@+id/appointment_featured_image"
            android:text="New Text"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            tools:text="Vacia" />


    </RelativeLayout>
</android.support.v7.widget.CardView>